<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.EndContractController">
    <content>
        <GridPane hgap="10.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
         <children>
            <Label text="Grąžinti sutartį:" />
            <CheckBox fx:id="checkBox" mnemonicParsing="false" onMouseClicked="#handleCheckBox" GridPane.columnIndex="1" />
            <Label text="Grąžinimo data:" GridPane.rowIndex="1" />
            <DatePicker fx:id="returnDate" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#updateSum"/>
            <TextField fx:id="payedAmount" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Suma, EUR:" GridPane.rowIndex="2" />
         </children></GridPane>
    </content>
   <padding>
      <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
   </padding>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</DialogPane>
