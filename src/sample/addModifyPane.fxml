<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.AddModifyController">

    <content>
        <GridPane hgap="10" vgap="10">
            <TextField fx:id="contractNumber" promptText="Contract Number" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <DatePicker fx:id="startDate" promptText="StartDate" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <DatePicker fx:id="endDate" promptText="EndDate" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <TextField fx:id="contractValue" promptText="Value" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <TextField fx:id="contractInterest" promptText="Interest" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <TextField fx:id="comments" promptText="komentarai" GridPane.columnIndex="1" GridPane.rowIndex="6" />
         <Label text="Sutarties Nr:" GridPane.rowIndex="1" />
         <Label text="Pradžios data:" GridPane.rowIndex="2" />
         <Label text="Pabaigos data:" GridPane.rowIndex="3" />
         <Label text="Suma, EUR:" GridPane.rowIndex="4" />
            <Label text="Mėnesinės palūkanos %:" wrapText="true" GridPane.rowIndex="5" />
            <Label text="Komentarai: " wrapText="true" GridPane.rowIndex="6" />
         <ChoiceBox fx:id="choiceBox" prefHeight="26.0" prefWidth="175.0" GridPane.columnIndex="1" />
         <Label text="Kliento kategorija" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </content>
   <opaqueInsets>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </opaqueInsets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
   </padding>

</DialogPane>
